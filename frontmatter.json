{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.taxonomy.customTaxonomy": [
    {
      "id": "author",
      "options": ["cieloazul310", "那珂川緑波", "ショスタコおもち"]
    },
    {
      "id": "category",
      "options": ["column", "culture", "sports"]
    }
  ],
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "default",
      "pageBundle": false,
      "previewPath": null,
      "fields": [
        {
          "title": "Title",
          "name": "title",
          "type": "string",
          "required": true
        },
        {
          "title": "Publishing date",
          "name": "date",
          "type": "datetime",
          "default": "{{now}}",
          "isPublishDate": true,
          "required": true
        },
        {
          "title": "Is in draft",
          "name": "draft",
          "type": "draft"
        },
        {
          "title": "Featured Image",
          "name": "featuredImg",
          "type": "image"
        },
        {
          "title": "Featured Image Alt",
          "name": "featuredImgAlt",
          "type": "string"
        },
        {
          "title": "Author",
          "name": "author",
          "type": "taxonomy",
          "taxonomyId": "author",
          "required": true
        },
        {
          "title": "Category",
          "name": "category",
          "type": "taxonomy",
          "taxonomyId": "category"
        }
      ]
    }
  ],
  "frontMatter.framework.id": "astro",
  "frontMatter.preview.host": "http://localhost:4321",
  "frontMatter.content.defaultFileType": "mdx",
  "frontMatter.content.pageFolders": [
    {
      "title": "Post",
      "path": "[[workspace]]/src/post"
    }
  ],
  "frontMatter.content.snippets": {
    "YouTube": {
      "description": "YouTubeの埋め込みコード",
      "body": "<YouTube src=\"[[src]]\" />",
      "fields": [{
        "name": "src",
        "title": "Video ID",
        "type": "string",
        "default": "9Ykf2IUA55E"
      }]
    }
  }
}
